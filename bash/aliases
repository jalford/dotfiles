

# git
alias gs='git status'
alias gb='git branch'
alias gp='git push'
alias gcl='git clone'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias ungit="find . -name '.git' -exec rm -rf {} \; | find . -name '.gitignore' -exec rm -rf {} \;"
alias gd='git diff'
alias gdm='git diff master'
alias grm='git ls-files --deleted | xargs git rm' # Removes all deleted files at once rather than running "git rm <filename>" multiple times.
alias gx='gitx &'
alias gk='gitk &'
alias gka='gitk --all &'

# textmate
alias m="mate"
alias m.="mate ."

# alias
alias ea='mate -w ~/bin/dotfiles/bash/aliases && reload'
alias ra='source ~/bin/dotfiles/bash/aliases'

# jump to code
alias tsd='cd /Volumes/Code/TSD'
alias code='cd /Volumes/Code/$1'

# command line - navigation
alias ..='cd ..'
alias c-='cd -'
alias cdt='cd ~/bin/dotfiles/'

# command line - list
alias l.='ls -d .[^.]*'
alias lah='ls -lah'
alias lh="ls -lh"
alias ll='ls -lhG'
alias lt='ls -lt'

# command line - misc
alias c='clear'
alias cll='clear; lh'
alias cl='clear; ls'
alias h='history'
alias md='mkdir -p'
alias e='exit'
function mdcd() { 
    mkdir -p "$1"
    cd "$1" 
}

# finder
alias o='open . &'

# Sublime Text
alias sublime="open '/Applications/Sublime Text.app'"
alias subl="open '/Applications/Sublime Text.app'"

# copy public ssh key
alias sshkey="cat ~/.ssh/id_rsa.pub | pbcopy && echo 'Copied to clipboard.'"

# vagrant
alias vm="ssh vagrant@127.0.0.1 -p 2222"
